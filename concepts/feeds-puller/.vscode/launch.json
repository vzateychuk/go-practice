    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            // since we only have a main.go file, we can change it to our workspace root
            "program": "${workspaceRoot}",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "-test.run",
                "TestWithHTTP"
            ],
            "showLog": true
        }
    ]
